doctype html
html
  head
    link(href="https://fonts.googleapis.com/css?family=Abel|Play" rel="stylesheet")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/style.css")
    block title
      title The Singing Siren Bookstore
  body.container-fluid
    .col-md-2.col-sm-3.col-xs-6
      img.logo(src='/images/logo.png')
    .col-md-10.col-sm-9.col.xs-6
      h1 The Singing Siren Bookstore
      h4 Science Fiction and Fantasy Books
    .col-md-12.col-sm-12.col-xs-12
      ul.nav
        li
          a(href="/") Home
        li
          a(href="/books/new") Add a Book
        li
          a(href="/signin") Add a Book
    .col-md-2.col-sm-3.col-lg-2.col-xs-5
      h3.smSearchtxt Search Books
        form(action="/", method="get")
          input.form-control(type="text", name="search_query", placeholder="Author, Title, Genre")
          .form-group
            br
            label(for='sel1') Select Genre:
            select#sel1.form-control
              option 1
          label.radio-inline
            input(type='radio', name='optradio')
            | Fiction
          label.radio-inline
            input(type='radio', name='optradio')
            | Non-Fiction
          div
            br
            input.btn.pull-right(type="submit", value="find")
    block content